<%- include('partials/_header') %>

    <div class="col-md-5 mt-5">
        <div class="card">
            <div class="card-body">
                <form action="customers/edit/<%= data.id %>" method="POST">
                    <div class="form-group">
                        <input type="text" name="name" value="<%= data.name %>" class="form-control">
                    </div>
                    <div class="form-group">
                        <input type="text" name="address" value="<%= data.address %>" class="form-control mt-2">
                    </div>
                    <div class="form-group">
                        <input type="text" name="phone" value="<%= data.phone %>" class="form-control mt-2">
                    </div>
                    <button type="submit" class="btn btn-primary form-control mt-2">Edit Customer</button>
                </form>
            </div>
        </div>
    </div>