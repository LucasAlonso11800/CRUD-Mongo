<%- include('partials/_header') %>

    <div class="container">
        <div class="row mt-4">
            <div class="col-md-7">
                <table class="table table-bordered table-hover bg-light">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data) { %>
                            <% for(let i = 0; i < data.length; i++){ %>
                                <tr>
                                    <td>
                                        <%= (i + 1) %>
                                    </td>
                                    <td>
                                        <%= data[i].name %>
                                    </td>
                                    <td>
                                        <%= data[i].address %>
                                    </td>
                                    <td>
                                        <%= data[i].phone %>
                                    </td>
                                    <td>
                                        <a href='customers/delete/<%= data[i].id%>' class="btn btn-danger">Delete</a>
                                        <a href='customers/update/<%= data[i].id%>' class="btn btn-info">Update</a>
                                    </td>
                                </tr>
                                <% } %>
                                    <% } %>
                    </tbody>
                </table>
            </div>
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="customers/add" method="POST">
                            <div class="form-group">
                                <input autocomplete="off" type="text" name="name" placeholder="Insert name" class="form-control">
                            </div>
                            <div class="form-group">
                                <input autocomplete="off" type="text" name="address" placeholder="Insert address" class="form-control mt-2">
                            </div>
                            <div class="form-group">
                                <input autocomplete="off" type="text" name="phone" placeholder="Insert phone" class="form-control mt-2">
                            </div>
                            <button type="submit" class="btn btn-primary form-control mt-2">Save Customer</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>